{
  "name": "caozei",
  "version": "1.0.0",
  "description": "WeChat文字冒险小游戏工程化代码",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist temp",
    "build": "node scripts/build.js",
    "dev": "node scripts/build.js --watch",
    "test": "vitest run",
    "playtest": "vitest run tests/playtestWithAITest.test.ts --run",
    "playtest:deep": "PLAYTEST_DEEP=1 vitest run tests/playtestWithAITest.test.ts --run",
    "playtest:quality": "PLAYTEST_QUALITY=1 vitest run tests/playtestWithAITest.test.ts --run",
    "playtest:sanguo": "PLAYTEST_ONLY_LABELS=深度三国迷 vitest run tests/playtestWithAITest.test.ts --run",
    "playtest:sanguo100": "PLAYTEST_ONLY_LABELS=资深三国玩家 vitest run tests/playtestWithAITest.test.ts --run",
    "playtest:sanguo500": "PLAYTEST_ONLY_LABELS=深度三国迷 PLAYTEST_MAX_ROUNDS=500 vitest run tests/playtestWithAITest.test.ts --run",
    "playtest:jailbreak": "PLAYTEST_JAILBREAK=1 vitest run tests/playtestWithAITest.test.ts --run",
    "adjudication-server": "node scripts/localAdjudicationServer.js"
  },
  "keywords": [
    "wechat",
    "minigame",
    "text-adventure"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "dotenv": "^16.4.5",
    "esbuild": "^0.27.3",
    "miniprogram-api-typings": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
